{
  "cleanUrls": true,
  "public": true,
  "builds": [
    { "src": "api/*.rs", "use": "@vercel/rust" },
    { "src": "www/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*.rs" },
    { "source": "/", "destination": "/www/index.html" },
    { "source": "/:path*", "destination": "/www/:path*" }
  ]
}
